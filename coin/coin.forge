
for _, cc in toolsets('cc.*') do
    local cc = cc:inherit 
    {
        include_directories = 
        {
            '../'
        };

        frameworks = 
        {
            'Foundation';
        };
    };

    cc:StaticLibrary '${lib}/coin' 
    {
        cc:Cxx '${obj}/%1' 
        {
            'file.cpp',
            'log.cpp',
            'string.cpp',

            'file/Monitor.cpp',
            'thread/Pool.cpp',

            'Process.cpp',
        };
    };
end
