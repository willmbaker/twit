
for _, toolset in toolsets('cc.*') do
    toolset:all
    {
        toolset:StaticLibrary '${lib}/twit'
        {
            toolset:Cxx '${obj}/%1'
            {
                'GitRepository.cpp';
            };
        };

        toolset:Executable '${bin}/twit' 
        {
            include_directories = 
            {
                '.'
            };

            frameworks = 
            {
                'Foundation';
                'CoreServices';
            };

            '${lib}/coin';
            '${lib}/twit';

            toolset:Cxx '${obj}/%1' 
            {
                'main.cpp';
            };
        };

        toolset:Executable '${bin}/test'
        {
            include_directories =
            {
                '.'
            };

            frameworks =
            {
                'Foundation';
                'CoreServices';
            };

            '${lib}/coin';
            '${lib}/twit';
            '${lib}/googletest';

            toolset:Cxx '${obj}/%1' 
            {
                'test.cpp';
            };
        }
    };
end
